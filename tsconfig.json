{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES6",
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",
    "noImplicitReturns": true,
    "strict": true,
    "allowJs": false,
    "lib": ["es6"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
